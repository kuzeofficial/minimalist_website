{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@services/*": ["./shared/services/*"],
      "@hooks/*": ["./shared/hooks/*"],
      "@utils/*": ["./shared/utils/*"],
      "@layouts/*": ["layouts/*"],
      "@libs/*": ["./shared/lib/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "shared/lib/notion.js",
    "pages/blog/[id].js"
  ],
  "exclude": ["node_modules"]
}
